@model List<MyPortolio.DAL.Entities.Feature>
<head>
    <!-- Line Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css">
</head>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/2mzl1tm.jpg" data-natural-width="4000" data-natural-height="2000" data-position-y="center">

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı in</span>
                    </a>
                </div>
            </div>

        </div>
    }

    <!-- end home-content -->

    <ul class="home-social">
        <li>
            <a href="https://github.com/munal98" target="_blank"><i class="la la-github" aria-hidden="true"></i><span>GitHub</span></a>
        </li>
        <li>
            <a href="https://www.linkedin.com/in/merttunaal/" target="_blank"><i class="la la-linkedin" aria-hidden="true"></i><span>Linkedin</span></a>
        </li>
        <li>
            <a href="https://www.instagram.com/merttunaal13/" target="_blank"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
        <li>
            <a href="https://twitter.com/mrtunaal" target="_blank"><i class="im im-twitter" aria-hidden="true"></i><span>Twitter</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section>
