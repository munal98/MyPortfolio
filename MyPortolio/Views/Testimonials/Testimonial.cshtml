@model List<Testimonial>
@{
    ViewData["Title"] = "Testimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslarım</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referanslar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referanslar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Adı Soyadı</th>
                                    <th scope="col">Şirket</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TestimonialId</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Company</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Testimonials/Delete/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Testimonials/Update/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


