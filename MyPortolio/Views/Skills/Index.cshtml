@model List<Skill>
@{
    ViewData["Title"] = "Skills";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeteneklerim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenekler Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yetenekle ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SkillId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <td>
                                            <a href="/Skills/Delete/@item.SkillId" class="btn btn-danger">Güncelle</a>
                                        </td>
                                        <td>
                                            <a href="/Skills/Update/@item.SkillId" class="btn btn-success">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
